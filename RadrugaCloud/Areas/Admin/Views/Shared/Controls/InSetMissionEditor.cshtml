@model Dictionary<string, string>

@{ var selectedMissionId= (string)ViewData["SelectedMissionId"] ?? ""; }

<div>
    @Html.DropDownList("Missions", Model.Select(m => new SelectListItem { Selected = (m.Key == selectedMissionId), Text = m.Value, Value = m.Key }), "--выберите миссию--")
    <span class="removeBaseMission">&nbsp;X&nbsp;</span>
    <a style="visibility: hidden">Посмотреть миссию</a>
</div>