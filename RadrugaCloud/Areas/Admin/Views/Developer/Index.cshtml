@model RadrugaCloud.Models.DeveloperOperationsModel

@{
    ViewBag.Title = "Developer Mode";
}
@{ var resultClass = Model.IsError ? "ErrorMessage" : "SuccessMessage"; }
<div class="@resultClass">@Html.Raw(Model.Result)</div>
@using (Html.BeginForm())
{
 @*    <div>
        <input type="submit" value="Execute" name="action:Fake" />
