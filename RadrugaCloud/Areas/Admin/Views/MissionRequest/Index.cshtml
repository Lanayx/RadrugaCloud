@using Core.Constants
@model IEnumerable<Core.DomainModels.MissionRequest>

@{
    ViewBag.Title = "Выполненные миссии";
}

<h2>Выполненные миссии</h2>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Mission.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.User.NickName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.LastUpdateDate)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr class="js-missionRequestItem">
        <td>
            @Html.DisplayFor(modelItem => item.Mission.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.User.NickName)
        </td>
        <td>
            @TimeZoneInfo.ConvertTimeFromUtc(item.LastUpdateDate, TimeZoneInfo.FindSystemTimeZoneById(DisplayConstants.BelarusTimeZoneId))
        </td>
        <td>
            @Html.ActionLink("Детали", "Details", new { id=item.Id })
        </td>
    </tr>
}

</table>
@section Scripts {
    <script src="~/Scripts/Custom/MissionRequests.js"></script>
}
