@model RadrugaCloud.Models.MissionUi
@{
    ViewBag.Title = "Редактирование миссии";
}
<h2>Миссия</h2>
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>Редактирование</h4>
        @if (!string.IsNullOrEmpty(Model.MissionSetId))
        {
            @Html.ActionLink("Перейти к сету", "Edit", "MissionSet", new { id = Model.MissionSetId }, null)
        }
        <hr />
        @Html.HiddenFor(model => model.Id)
        @Html.HiddenFor(model => model.InitialCommonPlaceAlias)
        @Html.EditorForModel()
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Сохранить" class="btn btn-default" />
            </div>
        </div>
    </div>
}
<div>
    @Html.ActionLink("Назад к списку", "Index")
</div>
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
    @Scripts.Render("~/bundles/ajax")
    @Scripts.Render("~/bundles/editMission")
}
