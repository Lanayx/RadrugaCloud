@model IEnumerable<Core.DomainModels.PersonQuality>

@{
    ViewBag.Title = "Качества человека";
}

<h2>Качества человека</h2>

@if ("Admin".Equals(ViewContext.RouteData.DataTokens["area"]))
{
    <p>
        @Html.ActionLink("Создать новое качество", "Create")
    </p>
}
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Description)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                @Html.ActionLink("Детали", "Details", new { id = item.Id })
                @if ("Admin".Equals(ViewContext.RouteData.DataTokens["area"]))
                {
                    <span> | </span>
                    @Html.ActionLink("Редактировать", "Edit", new { id = item.Id })
                    <span> | </span>
                    @Html.ActionLink("Удалить", "Delete", new { id = item.Id })
                }
            </td>
        </tr>
    }

</table>
@if (ViewBag.ShowPrevious)
{
    @Html.ActionLink("<- Сюда", "Index", null, new { page = ViewBag.CurrentPage - 1 })
}
@if (ViewBag.ShowNext)
{
    @Html.ActionLink("Туда ->", "Index", new { page = ViewBag.CurrentPage + 1 })
}
