<!DOCTYPE html>
<html>
<head>
<meta http-equiv="Content-Type" content="text/html; charset=utf-8"/>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width"/>
    <meta name="description" content="Radruga admin site"/>
    <title>@ViewBag.Title</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Радруга", "Index", "MissionDraft", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    @{ var currentArea = "Admin".Equals(ViewContext.RouteData.DataTokens["area"]) ? "admin" : "";}

                    <li>@Html.ActionLink("Предложения миссий", "Index", "MissionDraft", new { area = @currentArea }, null)</li>
                    <li>@Html.ActionLink("Качества человека", "Index", "PersonQuality", new { area = @currentArea }, null)</li>
                    @if (currentArea.Equals("admin"))
                    {
                        <li>@Html.ActionLink("Миссии", "Index", "Mission", new { area = @currentArea }, null)</li>
                        <li>@Html.ActionLink("Сеты миссий", "Index", "MissionSet", new { area = @currentArea }, null)</li>
                        <li>@Html.ActionLink("Тесты", "Index", "Question", new { area = @currentArea }, null)</li>
                        <li>@Html.ActionLink("Выполненные миссии", "Index", "MissionRequest", new { area = @currentArea }, null)</li>
                    }

                    <li>@Html.ActionLink("API", "Index", "Help", new { area = "" }, null)</li>
                </ul>
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.UtcNow.Year – Radruga</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
